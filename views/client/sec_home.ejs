            <p class="card-text"><%= posts[0].description.substring(0,300) %>...</p>
            
          </div>
        </div>
      </div>
      <% } %>
      <div class="col-md-6">
        <div class="row g-3">
          <% for(var i = 1; i< posts.length;i++){ %>
          <div class="col-6">
            <div class="card border-0 h-100">
             <img src="/<%= posts[i].blog_image %>" alt="lastest_blog"  class="card-img-top card-img-bottom h-100">
              <div class="card-body">
