 <section class="py-5 latest_blog">
  <div class="container text-center">
    <h4 class="text-muted mb-4"> Latest Blog</h4>
    <div class="row g-4 py-4">
      <!-- main card post -->
       <% if(posts.length >0) {%>
      <div class="col-md-6">
        <div class="card border-0 h-100">
          <a href="/single/<%= posts[0]._id.toString() %>"><img src="/<%= posts[0].blog_image %>" alt="lastest_blog" class="card-img-top card-img-bottom"></a>
