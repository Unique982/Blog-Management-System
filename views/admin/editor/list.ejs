<title><%= pageTitle %></title>
<%- include('../partials/header') %>
<%- include('../partials/navbar') %> <%-
include('../partials/sidebar') %>
<div class="content-wrapper" >
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-md-6 col-12">
          <h1>Editor List</h1>
          
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Editor</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title mt-2">List User</h3>
              <a href="/admin/editor/add" class="btn btn-primary ml-2">Add New Editor</a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user){ %>
                  <tr>
                    <td><%= user.sn %></td>
                    <td><%= user.username %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.email %></td>
                    
                    <td>
                      <div class="gap-2">
                        <a href="/admin/editor/edit/<%= user._id %>" class=" btn btn-success btn-sm">Edit</a>
                        <form action="/admin/editor/delete/<%= user._id %>" method="POST" style="display:inline-block">
                          <button type="submit" class="btn btn-danger btn-sm " onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                      </div>
                    </td>
                  </tr>
              <%  }); %>
                </tbody>
              </table>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- /.content -->
</div>

<%- include('../partials/script') %> <%- include('../partials/footer') %>
