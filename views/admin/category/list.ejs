<title><%= pageTitle %></title>
<%- include('../partials/header') %> <%- include('../partials/navbar') %> <%-
include('../partials/sidebar') %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Category List</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Category</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title mt-2">Category List</h3>
              <a href="/admin/category/add" class="btn btn-primary ml-2">Add Category</a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>Description</th>
                
                  </tr>
                </thead>
                <tbody>
                  <% if(CategoryList.length  >0){ %>
                  <% CategoryList.forEach(function(category){ %>
                  <tr>
                    <td><%= category.sn %></td>
                    <td><%= category.categoryName %></td>
                    <td><%= category.description %></td>
                    <td>
                      <div class="gap-2">

                      <a href="/admin/category/edit/<%= category._id %>" class=" btn btn-success btn-sm">Edit</a>
                    <form action="/admin/category/delete/<%= category._id %>" method="POST" style="display:inline-block">
                      <button type="submit" class="btn btn-danger btn-sm " onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                    </td>
                  </div>
                  </tr>
              <%  }) %>
              <% } else{ %>
                <tr>
                  <td colspan="3" class="text-center">No Record Found</td>
                </tr>

             <% } %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- /.content -->
</div>

<%- include('../partials/script') %> <%- include('../partials/footer') %>
