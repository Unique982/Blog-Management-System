<title><%= pageTitle %></title>
<%- include('../partials/header') %> <%- include('../partials/navbar') %> <%-
include('../partials/sidebar') %>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Post List</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Post</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title mt-2">Post List</h3>
              <a href="/admin/post/add" class="btn btn-primary ml-2">Add Post</a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Author Name</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Action</th>
                
                  </tr>
                </thead>
                <tbody>
                  <% if(PostList.length  >0){ %>
                  <% PostList.forEach(function(post){ %>
                  <tr>
                    <td><%= post.sn %></td>
                    <td><%= post.title.substring(0,10) %>...</td>
                    <td><%= post.description.substring(0,30) %>...</td>
                    <td><%= post.author %></td>
                    <td><%= post.categoryName %></td>
                    <td><%= post.formatedDate %></td>
                    <td>
                      <div class="me-4">
                      <a href="/admin/post/edit/<%= post._id %>" class=" btn btn-primary btn-sm">Edit</a>
                      <a href="/admin/post/view/<%= post._id %>" class=" btn btn-success btn-sm">View</a>
                    <form action="/admin/post/delete/<%= post._id %>" method="POST" style="display:inline-block">
                      <button type="submit" class="btn btn-danger btn-sm me-2" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                    </div>
                    </td>
                  </tr>
              <%  }) %>
              <% } else{ %> 
                 <tr>
                  <td colspan="3" class="text-center">No Record Found</td>
                </tr>

             <% } %> 
                </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- /.content -->
</div>

<%- include('../partials/script') %> <%- include('../partials/footer') %>
