<%- include('../admin/partials/header') %>

<title><%= pageTitle %></title>

   <div class="container d-flex justify-content-center align-items-center vh-100" style="font-family: 'Times New Roman', Times, serif; font-size: 16px;">
    <div class="row justify-content-center w-100">
      <div class="col-md-6">
        <div class="card p-4 rounded-4" style="width: 100%; max-width: 700px;">
          <h3 class="text-center mt-2">BlogHub Login Page</h3>
          <hr style="border:2px solid black" width="100%">
       
        <div class="card-body">
          <% if(typeof errorMessage !=='undefined' && errorMessage){ %>
            <div class="alert alert-danger" role="alert">
             <%= errorMessage %>
            </div>
            <% } %>
          <form action="/login" method="POST">
            <div class="form-group mb-3">
              <label for="">Email<span style="color:red">*</span></label>
              <input type="email" name="email" placeholder="Enter Your Email" class="form-control">
            </div>
            <div class="form-group mb-3">
              <label for="">Password<span style="color:red">*</span></label>
              <input type="password" name="password" placeholder="Enter Your Password" class="form-control">
            </div>
            <div class="form-group mb-3">
             
              <input type="submit" value="Login" class="btn btn-primary w-100 buttonload">
             
              <p class="text-center mt-3">Don't have an account?  <a href="/signup">Signup</a></p>
            </div>
          </form>
        </div>
        </div>
      </div>
    </div>
   </div>

   <%- include('../admin/partials/script') %>
  